<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconWeatherDetail"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:tint="#fff">
            </ImageView>

            <TextView
                android:id="@+id/tv_detailStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="thunder strom"
                android:textColor="#fff"
                android:textSize="18sp"
                >

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_access_time_white_48dp"
                android:tint="#fff">

            </ImageView>

            <TextView
                android:id="@+id/tv_timeUpdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="Thusday 2019"
                android:textColor="#fff"
                android:textSize="18sp"
                >

            </TextView>

        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/temp"
                android:tint="#fff">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|left"
                android:text="Temp"
                android:textColor="#fff"
                android:textSize="18sp"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_detailTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="24C - 25C"
                android:textColor="#fff"
                android:textSize="18sp"
               >

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/wind"
                android:tint="#fff">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|left"
                android:text="Wind"
                android:textColor="#fff"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_detailWind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="75 m/s"
                android:textColor="#fff"
                android:textSize="20sp"
               >

            </TextView>

        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/humidity"
                android:tint="#fff">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|left"
                android:text="Humidity"
                android:textColor="#fff"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_detailHumidity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="75 %"
                android:textColor="#fff"
                android:textSize="18sp"
                >

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/pressure"
                android:tint="#fff">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|left"
                android:text="Pressure"
                android:textColor="#fff"
                android:textSize="20sp"
                 />

            <TextView
                android:id="@+id/tv_detailPressure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="24 hPa"
                android:textColor="#fff"
                android:textSize="18sp"
               >

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="#fff" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        </LinearLayout>
    </LinearLayout>


</FrameLayout>